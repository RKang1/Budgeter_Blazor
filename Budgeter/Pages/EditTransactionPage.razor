@inject HttpClient Http
@inject NavigationManager NavigationManager

@page "/EditTransaction/{TransactionId}"

<h3>EditTransactionPage</h3>

<EditForm Model="@transactionModel" OnSubmit="SubmitTransaction">
    <InputDate id="purchaseDate" @bind-Value="transactionModel.PurchaseDate" />

    <InputText id="description" @bind-Value="transactionModel.Description" />

    <InputNumber id="amount" @bind-Value="transactionModel.Amount" />

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    [Parameter]
    public string TransactionId { get; set; }

    private int TransactionIdNum;

    private TransactionDTO transactionModel = new TransactionDTO();

    protected override async Task OnInitializedAsync()
    {
        int.TryParse(TransactionId, out TransactionIdNum);
        transactionModel = await Http.GetFromJsonAsync<TransactionDTO>(ControllerRouting.Transaction + "/" + TransactionId);
    }

    private async void SubmitTransaction()
    {

        await Http.PutAsJsonAsync<TransactionDTO>(ControllerRouting.Transaction + "/" + transactionModel.Id, transactionModel);
        NavigationManager.NavigateTo("/Income/ExpensesOverview/Expenses");
    }
}
